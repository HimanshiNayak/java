        int b =56;
        int sum = a+b;
        System.out.println(sum);
        String s= "Hello guyss";
        System.out.println(s);
        char d = 'd';
        System.out.println(d);
        //input
        Scanner sc = new Scanner(System.in);
        String name = sc.next(name); //takes only one word
        System.out.print(name);
        sc.nextLine();//takes the remianing
